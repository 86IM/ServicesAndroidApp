<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <!-- это комментарий в XML -->

    <!-- это желтая картинка фон в шапке -->

    <ImageView
        android:id="@+id/header"
        android:layout_width="414dp"
        android:layout_height="206dp"
        android:contentDescription="TODO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_header"
        tools:ignore="VectorDrawableCompat" />

    <Button
        android:id="@+id/button_settings"
        android:layout_width="30dp"
        android:layout_height="33dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="23dp"
        android:text=""
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="@+id/header"
        app:layout_constraintTop_toTopOf="@+id/header"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/wroclaw_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.098" />
    <!-- это заголовок Wroclaw uslugi -->
    <ImageView
        android:id="@+id/navigation"
        android:layout_width="32dp"
        android:layout_height="28dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toStartOf="@+id/wroclaw_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/wroclaw_title"
        app:srcCompat="@drawable/ic_navigation" />
    <!-- это значок навигации в левом верхнем углу -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="28dp"
        android:layout_height="26dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/wroclaw_title"
        app:layout_constraintTop_toTopOf="@+id/wroclaw_title"
        app:srcCompat="@drawable/ic_logo" />
    <!-- это значок логотипа в верхнем правом углу -->
    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="38dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="@+id/header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/meble_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/custom_white_button"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/meb_top"
                android:textAllCaps="false"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/naprawy_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/custom_black_button"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/nap_top"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/hydraulika_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/custom_white_button"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/hyd_top"
                android:textAllCaps="false"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/elektryka_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/custom_white_button"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/ele_top"
                android:textAllCaps="false"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/malowanie_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/custom_white_button"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/mal_top"
                android:textAllCaps="false"
                android:textColor="@color/black" />

            <Button
